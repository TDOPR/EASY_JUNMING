<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.haoliang.mapper.SysRoleMenuMapper">

    <select id="findAllByMenuId" resultType="Integer">
         SELECT
            menuId
        FROM
            sys_role_menu
        WHERE
            menuId in
        <foreach collection="idList" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </select>

    <select id="findAllMenuIdByRoleId" resultType="Integer">
        SELECT menuId FROM sys_role_menu WHERE roleId=#{roleId}
    </select>
</mapper>