<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.haoliang.mapper.SysMenuMapper">

    <resultMap type="com.haoliang.model.SysMenu" id="menuTree">
        <id column="id" property="id"/>
        <result column="createTime" property="createTime"/>
        <result column="lastmodifiedTime" property="lastmodifiedTime"/>
        <result column="path" property="path"/>
        <result column="title" property="title"/>
        <result column="icon" property="icon"/>
        <result column="parentId" property="parentId"/>
        <result column="sortIndex" property="sortIndex"/>
        <result column="importStr" property="importStr"/>
        <collection property="children" ofType="com.haoliang.model.SysMenu" column="id" select="getMenuChildren"/>
    </resultMap>

    <select id="findAllByParentIdOrderBySortIndexAsc" resultMap="menuTree">
        SELECT
            id,createTime,lastmodifiedTime,path,title,icon,parentId,sortIndex,importStr
        FROM
            sys_menu
        WHERE
            parentId=0
        ORDER BY
            sortIndex
    </select>

    <select id="findAllByParentIdAndRoleIdOrderBySortIndexAsc" resultMap="menuTree">
        SELECT
            sm.id,sm.createTime,sm.lastmodifiedTime,sm.path,sm.title,sm.icon,sm.parentId,sm.sortIndex,sm.importStr
        FROM
            sys_menu sm
        LEFT JOIN
            sys_role_menu srm
            ON sm.id=srm.menuId
        WHERE
            parentId=0 AND srm.roleId=#{roleId}
        ORDER BY
            sortIndex
    </select>

    <select id="getMenuChildren"  resultMap="menuTree">
        SELECT
            id,createTime,lastmodifiedTime,path,title,icon,parentId,sortIndex,importStr
        FROM
            sys_menu
        WHERE
            parentId =#{parentId}
        ORDER BY
            sortIndex
    </select>

    <select id="findMenuNameById" resultType="java.lang.String">
        SELECT
            menuName
        FROM
            sys_menu
        WHERE
            id IN
        <foreach collection="idList" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </select>

    <select id="findMaxSortIndex" resultType="java.lang.Integer">
        SELECT max(sortIndex) FROM sys_menu
    </select>


</mapper>
